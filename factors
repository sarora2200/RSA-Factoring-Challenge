#!/usr/bin/env python3
""" Factor numbers """
from sys import argv
from sympy import factorint

def open_read_file(file_name):
    """ Read numbers from a file and return as a list """
    with open(file_name, "r", encoding="utf-8") as file:
        lines = file.readlines()
    return [int(line.strip()) for line in lines]

def fac_list(ls):
    """ Factor each number in ls """
    for i in ls:
        factors = factorint(i)
        factor_str = " * ".join([f"{factor}^{exponent}" for factor, exponent in factors.items()])
        print(f"{i} = {factor_str}")

if len(argv) == 2:
    fac_list(open_read_file(argv[1]))
